<form id="add_user" method="post" action="/api/users">
   <div class="new_user">
     <div class="form-group">
       <label for="name" class="text-light">Name</label>
       <input type="hidden" name="id" value="" />
       <input
         type="text"
         name="name"
         value=""
         placeholder="muhammad ali"
       />
     </div>
     <div class="form-group">
       <label for="email" class="text-light">Email</label> 
       <input
         type="text"
         name="email"
         value=""
         placeholder="marka122@gmail.com"
       />
     </div>
     <div class="form-group">
       <label for="gender" class="text-light">Gender</label>
       <div class="radio inline">
         <input type="radio" name="gender" value="Male" />
         <label for="gender" class="gender">Male</label>
       </div>
       <div class="radio inline">
         <input type="radio" name="gender" value="Female" />
         <label for="gender" class="gender">Female</label>
       </div>
     </div>
     <div class="form-group">
       <label for="gender" class="text-light">Status</label>
       <div class="radio inline">
         <input type="radio" name="status" value="Active" />
         <label for="status" class="radio-label">Active</label>
       </div>
       <div class="radio inline">
         <input type="radio" name="status" value="Inactive" />
         <label for="status" class="radio-label">Inactive</label>
       </div>
     </div>
     <div class="form-group">
       <button type="submit" class="btn text-dark update">Save</button>
     </div>
   </div>
 </form>